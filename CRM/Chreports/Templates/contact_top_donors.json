{ 
    "name": "contact_top_donors",
    "title": "Top contributors",
    "template": "chreports/top_donors",
    "type": "detailed",
    "entity": "contact",
    "fields":{
        "exposed_id": {},
        "sort_name": {"default" : true},
        "first_name": {},
        "middle_name": {},
        "last_name": {},
        "contact_type": {},
        "contact_sub_type": {},
        "gender_id": {},
        "birth_date": {},
        "age": {},
        "email": {},
        "phone": {},
        "street_name": {},
        "street_unit": {},
        "street_address": {},
        "supplemental_address_1": {},
        "supplemental_address_2": {},
        "city": {},
        "postal_code": {},
        "postal_code_suffix": {},
        "country": {},
        "state_province_id": {},
        "county_id": {},
        "card_type_id": {},
        "total_lifetime_contributions": {"default" : true},
        "amount_of_last_contribution": {"default" : true}
    },
    "order_bys":{
        "sort_name": {
            "order": "ASC"
        },
        "total_lifetime_contributions": {
            "order": "DESC"
        }
    },
    "use_default_filters" : false,
    "filters":{
        "receive_date":{},
        "receipt_date":{},
        "total_range":{},
        "financial_type_id":{},
        "contribution_status_id": {
            "in": [
                "1"
            ]
        },
        "financial_account":{},
        "card_type_id":{},
        "tagid":{},
        "disbursement_date":{},
        "gid":{},
        "on_hold":{}
    },
    "groupByClause" : false
}